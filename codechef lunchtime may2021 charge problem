
#include<bits/stdc++.h>
#define pb push_back
#define pii pair<int,int>
#define mp make_pair
#define ll  long long int
#define lop(i,a,b) for(int i=(a);i<(b);i++)
using namespace std;

void solve()
{
    ll n,q;
    cin>>n>>q;
    string s;
    cin>>s;
    int location=0;
    lop(i,0,n-1)
    {
        if(s[i]==s[i+1])location+=2;
        else location++;
    }

    while(q--){
        ll pos;cin>>pos;
        pos--;
        s[pos]=(s[pos]=='0'?'1':'0');
        if(pos==0){
            if(pos+1<n);
            {
                if(s[pos]==s[pos+1])location++;
                else location--;
            }
        }
        else if(pos==n-1)
        {
            if(pos-1>=0)
            {
                if(s[pos]==s[pos-1])location++;
                else location--;
            }
        }
        else{
            if(s[pos-1]==s[pos+1]){
                location+=2;
            }
            else location-=2;
        }
        cout<<location<<endl;
    }
}
int  main()
{   
    ll tc;
    cin>>tc;
    while(tc--)
    {
     solve();
    }
    return 0;
}
